<div class="container">
  <div class="row">

    <h1>Index of plans</h1>

    <table class="table">
      <tr>
        <th>What?</th>
        <th>How many times?</th>
        <th>Why care?</th>
        <th>Notes</th>
        <th>Min. time</th>
        <% if @deed_id.present? %>
          <th>Do it!</th>
        <% end %>
      </tr>
      <% @plans.each do |plan| %>
        <tr>
          <td><%= link_to plan.name, plan_path(plan.id) %></td>
          <td><%= plan.deeds.count %></td>
          <td><%= raw("#{plan.why_care}") %></td>
          <td><%= plan.notes %></td>
          <td><%= plan.minimum_minutes %></td>
          <% if @deed_id.present? %>
            <td><%= link_to "Yeah!", deeds_doing_path(@deed_id,plan.id) %></td>
          <% end %>
        </tr>
      <% end %>
    </table>

  </div>
</div>