<%= link_to "Home", root_path %><br>
<%= link_to "Back to tags", tags_path %>

<h1><%= @tag.name %></h1>

<p>Emails: <%= @email_list %></p>

<table>
  <% @people.each do |person| %>
    <tr>
      <td><%= link_to "#{person.name}", "#{person.link_string}" %></td>
      <td><%= mail_to "#{person.email}" %>
    </tr>
  <% end %>
</table>