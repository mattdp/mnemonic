<% provide(:title,"New event") %>

<div class="container">
  <div class="row">

    <%= form_tag action: "create", controller: "events" do %>

      <%= label_tag :content, "Event name" %>
      <%= text_field_tag :content %>

      <%= select_tag(:people, options_from_collection_for_select(@people,"id","name"), multiple: true) %>

      <%= submit_tag "Create tagged event" %>

    <% end %>

  </div>
</div>