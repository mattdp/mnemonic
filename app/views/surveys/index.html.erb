<div class="row">
  <div class="col-md-12"> 
    <h1>Last 25 surveys</h1>
    <% if @surveys.present? %>
      <table class="table">
        <thead>
          <th>Time</th>
          <% @surveys.first.answers.each do |answer| %>
            <th><%= "#{answer.question.short}" %></th>
          <% end %>
        </thead>
        <tbody>
          <% @surveys.each do |survey| %>
            <tr>
              <td><%= survey.created_at.strftime("%a, %b %-d %H:%M") %></td>
              <% survey.answers.each do |answer| %>
                <td><%= "#{answer.get_answer}" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No surveys so far!</p>
    <% end %>
  </div>
</div>