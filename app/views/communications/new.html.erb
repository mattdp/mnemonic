<% provide(:title,"New communications") %>

<h1>New communications</h1>

<%= form_tag :action => "create", :controller => "communications" do %>
  <% (1..5).each do |n| %>
    <%= render partial: "communications/individual_new", locals: {index_number: n, who: @people} %>
  <% end %>

  <%= render partial: "events/unexisting_people_within_form", locals: {how_many_rows: 5} %>

  <%= submit_tag "Add communications", class: "save-button" %>
<% end %>